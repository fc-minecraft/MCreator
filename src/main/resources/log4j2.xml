<Configuration status="warn">
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%style{%d{yyyy-MM-dd-HH:mm:ss}}{white} %highlight{[%t/%p]} %style{[%c]}{blue} %m%n"
                    disableAnsi="${sys:log_disable_ansi}"/>
        </Console>
        <RollingFile name="ROLLINGFILE" fileName="${sys:log_directory}/logs/mcreator.log"
                     filePattern="${sys:log_directory}/logs/mcreator_%d{yyyy_MM_dd}-%i.log">
            <PatternLayout pattern="%d{yyyy-MM-dd-HH:mm:ss} [%t/%p] [%c] %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="50MB"/>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <OnStartupTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="50">
                <Delete basePath="${sys:log_directory}/logs" maxDepth="1">
                    <IfFileName glob="mcreator_*.log">
                        <IfAccumulatedFileCount exceeds="50"/>
                    </IfFileName>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
        <Sentry name="Sentry" 
                minimumBreadcrumbLevel="DEBUG" 
                minimumEventLevel="WARN">
            <Filters>
                <RegexFilter regex="(?s).*(?i)(Unsupported JavaFX configuration|PlatformImpl startup|SLF4J: Defaulting to no-operation).*" onMatch="DENY" onMismatch="NEUTRAL"/>
                <RegexFilter regex=".*(?i)(java\.net\.ConnectException|java\.net\.UnknownHostException).*" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
        </Sentry>
    </Appenders>
    <Loggers>
        <Logger name="net.mcreator" level="ALL"/>
        <Root level="ALL">
            <AppenderRef ref="CONSOLE" level="ALL"/>
            <AppenderRef ref="ROLLINGFILE" level="${sys:log_file_level}"/>
            <AppenderRef ref="Sentry" level="DEBUG" />
        </Root>
    </Loggers>
</Configuration>